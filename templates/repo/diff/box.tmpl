{{if .DiffNotAvailable}}
	<h4>{{.i18n.Tr "repo.diff.data_not_available"}}</h4>
{{else}}
	<div class="diff-detail-box diff-box">
		<div>
			<i class="fa fa-retweet"></i>
			{{.i18n.Tr "repo.diff.stats_desc" .Diff.NumFiles .Diff.TotalAdditions .Diff.TotalDeletions | Str2HTML}}
			<div class="ui right">
				<a class="ui tiny basic toggle button" href="?style={{if .IsSplitStyle}}unified{{else}}split{{end}}">{{ if .IsSplitStyle }}{{.i18n.Tr "repo.diff.show_unified_view"}}{{else}}{{.i18n.Tr "repo.diff.show_split_view"}}{{end}}</a>
				<a class="ui tiny basic toggle button" data-target="#diff-files">{{.i18n.Tr "repo.diff.show_diff_stats"}}</a>
			</div>
		</div>
		<ol class="detail-files hide" id="diff-files">
			{{range .Diff.Files}}
				<li>
					<div class="diff-counter count pull-right">
						{{if not .IsBinary}}
							<span class="add" data-line="{{.NumAdditions}}">{{.NumAdditions}}</span>
							<span class="bar">
								<span class="pull-left add"></span>
								<span class="pull-left del"></span>
							</span>
							<span class="del" data-line="{{.NumDeletions}}">{{.NumDeletions}}</span>
						{{else}}
							<span>{{$.i18n.Tr "repo.diff.bin"}}</span>
						{{end}}
					</div>
					<!-- todo finish all file status, now modify, add, delete and rename -->
					<span class="status {{DiffFileTypeToStr .Type}} poping up" data-content="{{DiffFileTypeToStr .Type}}" data-variation="inverted tiny" data-position="right center">&nbsp;</span>
					<a class="file" href="#diff-{{.Index}}">{{.Name}}</a>
				</li>
			{{end}}
		</ol>
	</div>

	{{range $i, $file := .Diff.Files}}
		{{if $file.IsIncomplete}}
			<div class="diff-file-box diff-box file-content">
				<h4 class="ui top attached normal header">
					{{$.i18n.Tr "repo.diff.file_suppressed"}}
					<div class="diff-counter count ui left">
						<span class="add" data-line="{{.NumAdditions}}">+ {{.NumAdditions}}</span>
						<span class="bar">
							<span class="pull-left add"></span>
							<span class="pull-left del"></span>
						</span>
						<span class="del" data-line="{{.NumDeletions}}">- {{.NumDeletions}}</span>
					</div>
					<span class="file">{{$file.Name}}</span>
				</h4>
			</div>
		{{else}}
			<div class="diff-file-box diff-box file-content {{TabSizeClass $.Editorconfig $file.Name}}" id="diff-{{.Index}}">
				<h4 class="ui top attached normal header">
					<div class="diff-counter count ui left">
						{{if $file.IsBinary}}
							{{$.i18n.Tr "repo.diff.bin"}}
						{{else}}
							<span class="add" data-line="{{.NumAdditions}}">+ {{.NumAdditions}}</span>
							<span class="bar">
								<span class="pull-left add"></span>
								<span class="pull-left del"></span>
							</span>
							<span class="del" data-line="{{.NumDeletions}}">- {{.NumDeletions}}</span>
						{{end}}
					</div>
					<span class="file">{{if $file.IsRenamed}}{{$file.OldName}} &rarr; {{end}}{{$file.Name}}</span>
					{{if not $file.IsSubmodule}}
						<div class="ui right">
							{{if $file.IsDeleted}}
								<a class="ui basic grey tiny button" rel="nofollow" href="{{EscapePound $.BeforeSourcePath}}/{{EscapePound .Name}}">{{$.i18n.Tr "repo.diff.view_file"}}</a>
							{{else if $.SourcePath}} {{/* No SourcePath we assume the source repository no longer exists */}}
								<a class="ui basic grey tiny button" rel="nofollow" href="{{EscapePound $.SourcePath}}/{{EscapePound .Name}}">{{$.i18n.Tr "repo.diff.view_file"}}</a>
							{{end}}
						</div>
					{{end}}
				</h4>
				<div class="ui unstackable attached table segment">
					{{$isImage := false}}
					{{if $file.IsDeleted}}
						{{$isImage = (call $.IsImageFileByIndex $file.Index)}}
					{{else}}
						{{$isImage = (call $.IsImageFile $file.Name)}}
					{{end}}

					{{if $isImage}}
						<div class="center">
							{{if $file.IsDeleted}}
								<img src="{{$.BeforeRawPath}}/{{EscapePound .Name}}">
							{{else}}
								<img src="{{$.RawPath}}/{{EscapePound .Name}}">
							{{end}}
						</div>
					{{else}}
						<div class="file-body file-code code-view code-diff">
							<table>
								<tbody>
									{{$highlightClass := $file.HighlightClass}}
									{{if $.IsSplitStyle}}
										{{range $j, $section := $file.Sections}}
											{{range $k, $line := $section.Lines}}
												<tr class="{{DiffLineTypeToStr .Type}}-code nl-{{$k}} ol-{{$k}}">
													{{if eq .Type 4}}
														<td class="lines-num"></td>
														<td colspan="3"  class="lines-code">
															<pre><code class="{{if $highlightClass}}language-{{$highlightClass}}{{else}}nohighlight{{end}}">{{$section.ComputedInlineDiffFor $line}}</code></pre>
														</td>
													{{else}}
														<td class="lines-num lines-num-old" {{if $line.LeftLine}} id="diff-{{Sha1 $file.Index}}L{{$line.LeftLine}}" data-line-number="{{$line.LeftLine}}"{{end}}>
														</td>
														<td class="lines-code halfwidth">
															{{if $.IsEnabledCommentsPullRequest}}
															<button
															{{if $line.LeftLine}} data-file-id="{{$file.Index}}" data-line-side="1" data-line-number="{{$line.LeftLine}}"{{end}}
															class="add-comment-btn ui compact icon mini button"
															id="add-comment-btn-{{Sha1 $file.Index}}R{{$line.RightLine}}"
															style="display: none"
															><i class="add icon"></i></button>
															{{end}}
															<pre><code class="wrap {{if $highlightClass}}language-{{$highlightClass}}{{else}}nohighlight{{end}}">{{if $line.LeftLine}}{{$section.ComputedInlineDiffFor $line}}{{end}}</code></pre>
														</td>
														<td class="lines-num lines-num-new" {{if $line.RightLine}} id="diff-{{Sha1 $file.Index}}R{{$line.RightLine}}" data-line-number="{{$line.RightLine}}"{{end}}>
														</td>
														<td class="lines-code halfwidth">
															{{if $.IsEnabledCommentsPullRequest}}
															<button
																{{if $line.RightLine}}data-file-id="{{$file.Index}}" data-line-side="2" data-line-number="{{$line.RightLine}}"{{end}}
																class="add-comment-btn ui compact icon mini button"
																id="add-comment-btn-{{Sha1 $file.Index}}R{{$line.RightLine}}"
																style="display: none"
																><i class="add icon"></i></button>
															{{end}}
															<pre><code class="wrap {{if $highlightClass}}language-{{$highlightClass}}{{else}}nohighlight{{end}}">{{if $line.RightLine}}{{$section.ComputedInlineDiffFor $line}}{{end}}</code></pre>
														</td>
													{{end}}
												</tr>

												{{range $ci, $commentViewData := $.CodeComments}}
													{{if $commentViewData.Comment.EqualToFileIndexAndLine $file.Index $line.LeftLine $line.RightLine}}
														{{template "repo/pulls/code_comment_tr_split_wrap" $commentViewData }}
													{{end}}
												{{end}}

											{{end}}
										{{end}}
									{{else}}

										{{/*I commented this because did not know valid way "how to pass comments array to section_unified template" */}}
										{{/*and becase this template used in templates/repo/editor/diff_preview.tmpl - it's pretty hard for me at moment*/}}
										{{/*if you know how make it cross-used with pull request comments and editor, please help.*/}}
										{{/*template "repo/diff/section_unified" . */}}

										{{range $j, $section := $file.Sections}}
											{{range $k, $line := $section.Lines}}
												<tr class="{{DiffLineTypeToStr .Type}}-code nl-{{$k}} ol-{{$k}}">
													{{if eq .Type 4}}
														<td colspan="2" class="lines-num">
															{{/* {{if gt $j 0}}<span class="fold octicon octicon-fold"></span>{{end}} */}}
														</td>
													{{else}}
														<td class="lines-num lines-num-old" {{if $line.LeftLine}}  data-file-id="{{$file.Index}}" id="diff-{{$file.Index}}L{{$line.LeftLine}}" data-line-number="{{$line.LeftLine}}"{{end}}></td>
														<td class="lines-num lines-num-new" {{if $line.RightLine}} data-file-id="{{$file.Index}}" id="diff-{{$file.Index}}R{{$line.RightLine}}" data-line-number="{{$line.RightLine}}"{{end}}></td>
													{{end}}
													<td class="lines-code">
														{{if $.IsEnabledCommentsPullRequest}}
														<button
														data-file-id="{{if $line.RightLine}}{{$file.Index}}{{else if $line.LeftLine}}{{$file.Index}}{{end}}"
														data-line-side="{{if $line.RightLine}}2{{else if $line.LeftLine}}1{{$line.LeftLine}}{{end}}"
														data-line-number="{{if $line.RightLine}}{{$line.RightLine}}{{end}}"
														class="add-comment-btn ui compact icon mini button"
														style="display: none"
														id="add-comment-btn-{{Sha1 $file.Index}}R{{$line.RightLine}}">
														<i class="add icon"></i></button>
														{{end}}
														<pre><code class="{{if $highlightClass}}language-{{$highlightClass}}{{else}}nohighlight{{end}}">{{$section.ComputedInlineDiffFor $line}}</code></pre>
													</td>
												</tr>
												{{range $ci, $commentViewData := $.CodeComments}}
													{{if $commentViewData.Comment.EqualToFileIndexAndLine $file.Index $line.LeftLine $line.RightLine}}
														{{template "repo/pulls/code_comment_tr_wrap" $commentViewData}}
													{{end}}
												{{end}}
											{{end}}
										{{end}}

									{{end}}
								</tbody>
							</table>
						</div>
					{{end}}
				</div>
			</div>
		{{end}}
	<br>
	{{end}}

	{{if .Diff.IsIncomplete}}
		<div class="diff-file-box diff-box file-content">
			<h4 class="ui top attached normal header">
				{{$.i18n.Tr "repo.diff.too_many_files"}}
			</h4>
		</div>
	{{end}}

	{{if .IsSplitStyle}}
		<script>
			(function() {
				$('.add-code').each(function() {
					var prev = $(this).prev();
					if(prev.is('.del-code') && prev.children().eq(3).text().trim() === '') {
						while(prev.prev().is('.del-code') && prev.prev().children().eq(3).text().trim() === '') {
							prev = prev.prev();
						}
						prev.children().eq(3).html($(this).children().eq(3).html());
						prev.children().eq(2).html($(this).children().eq(2).html());
						prev.children().eq(3).addClass('add-code');
						prev.children().eq(2).addClass('add-code');
						$(this).remove();
					}
				});
			}());
		</script>
	{{end}}

	{{if .IsEnabledCommentsPullRequest}}
		<style>
			.comment-code-line-wrapper {
				padding: 10px !important;
			}
			button.add-comment-btn {
				height: 20px;
				width: 20px;
				padding: 2px !important;
				z-index:999;
				position: relative;
				float: left;
				margin-left: -15px !important;
				display: none;
			}
		</style>
	  <div id="pr-comments-templates" style="display:none">
			<!-- Comment input form -->
			{{/* TODO on split style form must correct render */}}
			<div class="comment-code-line-form" style="display: none">
				<form class="ui form" action="{{.CodeCommentLink}}" method="post">
					<div class="field">
						<div class="ui top attached tabular menu" data-write="write" data-preview="preview">
							<a class="active item" data-tab="write">{{.i18n.Tr "repo.issues.create_comment"}}</a>
						</div>
						<div class="ui bottom attached active tab segment" data-tab="write">
							<textarea id="content" class="edit_area" name="content" tabindex="4" data-id="issue-{{.RepoName}}" data-url="{{AppSubURL}}/api/v1/markdown" data-context="{{.Repo.RepoLink}}"></textarea>
						</div>
						<div class="ui bottom attached tab segment markdown" data-tab="preview">
							{{.i18n.Tr "repo.release.loading"}}
						</div>
					</div>
					{{.CSRFTokenHTML}}
					<div class="text right">
						<button class="ui red basic button cancel-btn" tabindex="5">
							{{.i18n.Tr "cancel"}}
						</button>
						<button class="ui green button save-btn" tabindex="5">
							{{.i18n.Tr "repo.issues.create_comment"}}
						</button>
					</div>
				</form>
				</div>
			</div>
		</div>
  	<script>
		$(function() {
			function InitSimpleMDE($editArea)
			{
				  if ($editArea.length > 0) {
				    new SimpleMDE({
				      autoDownloadFontAwesome: false,
				      element: $editArea[0],
				      forceSync: true,
				      previewRender: function(plainText, preview) {
				        // Async method
				        setTimeout(function() {
				          // FIXME: still send render request when return back to edit mode
				          $.post(
				            $editArea.data("url"),
				            {
				              _csrf: csrf,
				              mode: "gfm",
				              context: $editArea.data("context"),
				              text: plainText
				            },
				            function(data) {
				              preview.innerHTML = '<div class="markdown">' + data + "</div>";
				              emojify.run($(".editor-preview")[0]);
				            }
				          );
				        }, 0);

				        return "Loading...";
				      },
				      renderingConfig: {
				        singleLineBreaks: false
				      },
				      indentWithTabs: false,
				      tabSize: 4,
				      spellChecker: false,
				      toolbar: [
				        "bold",
				        "italic",
				        "strikethrough",
				        "|",
				        "heading-1",
				        "heading-2",
				        "heading-3",
				        "heading-bigger",
				        "heading-smaller",
				        "|",
				        "code",
				        "quote",
				        "|",
				        "unordered-list",
				        "ordered-list",
				        "|",
				        "link",
				        "image",
				        "table",
				        "horizontal-rule",
				        "|",
				        "clean-block",
				        "preview",
				        "fullscreen"
				      ]
				    });
				  }
			}
			let tpl_container = $('#pr-comments-templates');
			let add_comment_form = tpl_container.find('.comment-code-line-form').parent().html();
			let add_btn = $('.add-comment-btn');

			let code_diff_table_trs = $('.lines-code');
			code_diff_table_trs.mouseenter( function(e) {
				let _addBtn = $(this).find('.add-comment-btn');
				if(_addBtn.length > 0) {
						_addBtn.show();
				}
			}).mouseleave( function() {
				let _addBtn = $(this).find('.add-comment-btn');
				if(_addBtn.length > 0) {
						_addBtn.hide();
				}
			});

			add_btn.on('click', function() {
				let _addBtn = $(this);
				if($(this).hasClass('has-comment-form')) {
					return false;
				}
				$(this).addClass('has-comment-form');
				let selected_line_num = $(this).data('line-number');
				let file_id = $(this).data('file-id');
				let side_id = $(this).data('line-side');
				let hovered_tr = $(this).parent().parent();
				let col_span = hovered_tr.find('td').length;
				let comment_block = $(add_comment_form);
				let wrap = '<tr data-comment-line-number="'+selected_line_num+'" id="file-'+file_id+'-ccl-line-'+selected_line_num+'" class="comment-code-line"><td class="comment-code-line-wrapper" colspan="'+col_span+'">'+comment_block.html()+'</td></tr>';
				hovered_tr.after(wrap);
				let insertedCommentBlockTextArea = $('tr[data-comment-line-number="'+selected_line_num+'"] textarea');
				let insertedForm =  $('tr[data-comment-line-number="'+selected_line_num+'"] form');
				let uiPageContainerWidth =  $('.ui.container').first().css('width');
				insertedForm.attr('style', 'padding: 0 15px; width: ' + uiPageContainerWidth);

				let cancelButton = $('tr[data-comment-line-number="'+selected_line_num+'"] .cancel-btn');
				let saveButton = $('tr[data-comment-line-number="'+selected_line_num+'"] .save-btn');
				cancelButton.on('click', function() {
					$('tr[data-comment-line-number="'+selected_line_num+'"]').remove();
					_addBtn.removeClass('has-comment-form');
					return false;
				});
				saveButton.on('click', function() {
					let _ = $(this);
					// Prevent duplicate click
					if(_.hasClass('saving')) {
						return false;
					}
					_.addClass('saving');
					let form = $('tr[data-comment-line-number="'+selected_line_num+'"] form');
					let formUrl = form.attr('action');
					let csrf = form.find('input[name=_csrf]').val();
					$.ajax({
						url: formUrl,
						method: 'POST',
						data: {
							_csrf: csrf,
							line: selected_line_num,
							code: '',
							comment: insertedCommentBlockTextArea.val(),
							file_id: file_id,
							side_id: side_id,
							split: {{if .IsSplitStyle}}true{{else}}false{{end}}
						},
					  statusCode: {
							200: function(r) {
									_.removeClass('saving');
									_addBtn.removeClass('has-comment-form');
									$('tr[data-comment-line-number="'+selected_line_num+'"]').replaceWith(r);
							},
					    404: function() {
								_.removeClass('saving');
								_addBtn.removeClass('has-comment-form');
					      alert( "page not found" );
					    },
							500: function(){
									_.removeClass('saving');
									_addBtn.removeClass('has-comment-form');
								  alert('500 error');
							},
							502: function(){
									_.removeClass('saving');
									_addBtn.removeClass('has-comment-form');
								  alert('502 error');
							},
							503: function(){
									_.removeClass('saving');
									_addBtn.removeClass('has-comment-form');
								  alert('503 error');
							},
							504: function(){
									_.removeClass('saving');
									_addBtn.removeClass('has-comment-form');
								  alert('504 error');
							}
					  }
					});

					return false;
				});
				InitSimpleMDE(insertedCommentBlockTextArea);
			});
		});
		</script>
	{{end}}
{{end}}
